{
  "name": "nightwatch-api",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "files": [
    "lib",
    "types"
  ],
  "types": "./lib/main.d.ts",
  "engines": {
    "node": ">= 8.0.0"
  },
  "repository": "git@github.com:mucsi96/nightwatch-api.git",
  "author": "Igor Mucsicska <mucsi_96@yahoo.com>",
  "license": "MIT",
  "scripts": {
    "clean": "del-cli lib",
    "build": "tsc --emitDeclarationOnly && babel src --out-dir lib --extensions \".ts\"",
    "type-check": "tsc --noEmit",
    "start": "ts-node test/server.ts",
    "test": "cross-env DEBUG=nightwatch-api jest --no-cache",
    "test:coverage": "npm test -- --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:ci": "start-server-and-test start http://localhost:3000 test:coverage",
    "prepack": "npm run clean && npm run build",
    "pack-into-examples": "node test/pack-into-examples.js",
    "debug": "cross-env DEBUG=nightwatch-api NIGHTWATCH_VERBOSE=true babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "tslint 'src/**/*.{ts,tsx}'"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/setup",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "debug": "^4.1.0",
    "@types/debug": "^0.0.31"
  },
  "peerDependencies": {
    "nightwatch": "^1.0.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "chai": "^4.2.0",
    "chromedriver": "2.43.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "geckodriver": "1.12.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lodash.omit": "^4.5.0",
    "nightwatch": "^1.0.11",
    "prettier": "1.15.1",
    "pretty-quick": "^1.8.0",
    "selenium-server": "3.141.0",
    "start-server-and-test": "1.7.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  }
}
