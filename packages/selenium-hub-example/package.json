    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "chromedriver": "^2.44.1",
    "cucumber": "^5.1.0",
    "cucumber-pretty": "^1.5.0",
    "geckodriver": "^1.14.1",
    "nightwatch": "^1.0.18",
    "nightwatch-api": "latest",
    "start-server-and-test": "^1.7.11"
  }
